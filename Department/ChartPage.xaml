<Page x:Class="DepartmentServer.ChartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
      mc:Ignorable="d"
      Title="ChartPage">


    <Grid Background="AliceBlue" Width="700" Height="410">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScottPlot:WpfPlot x:Name="wpfPlot1" Grid.Row="0" Margin="20 10"/>
        <Button x:Name="SaveClickButton" Content="Save" Height="30" Margin="20 10" VerticalAlignment="Bottom" Grid.Row="1" Click="SaveClickButton_Click"/>
    </Grid>

   
</Page>
