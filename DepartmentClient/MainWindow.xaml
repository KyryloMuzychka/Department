<Window x:Class="DepartmentClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DepartmentClient"
        mc:Ignorable="d"
        Title="Department Client" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock TextWrapping="Wrap" Name="StatusTextBlock" HorizontalAlignment="Center" Margin="0,0,0,0" Text="" VerticalAlignment="Center" Width="auto" Height="auto" />

        <Button x:Name="ConnectButton" Content="Connect" Margin="20,0,20,20" VerticalAlignment="Top" Click="ConnectButton_Click" Grid.Row="1" HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
